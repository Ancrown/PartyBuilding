<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/item_home_page_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp10"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginRight="@dimen/dp10"
        android:layout_marginTop="@dimen/dp10"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_home_page_img"
            android:layout_width="@dimen/dp100"
            android:layout_height="@dimen/dp70"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@color/black" />

        <RelativeLayout
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/item_home_page_img"
            android:layout_alignTop="@+id/item_home_page_img"
            android:layout_marginLeft="@dimen/dp19"
            android:layout_toRightOf="@+id/item_home_page_img"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_home_page_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/dp5"
                    android:background="@drawable/fillet_background_bule"
                    android:paddingBottom="@dimen/dp1"
                    android:paddingLeft="@dimen/dp3"
                    android:paddingRight="@dimen/dp3"
                    android:paddingTop="@dimen/dp1"
                    android:text="@string/party_center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_9"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/item_home_page_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="2dp"
                    android:lineSpacingExtra="@dimen/dp2"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="习近平书记讲话习近平书记讲话习近平书记讲话习近平书记讲话习近平书记讲话：XXXXXXXXXXXXXXXXXXXXXXXX"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_15" />
            </LinearLayout>

            <TextView
                android:id="@+id/item_home_page_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line2"
                android:layout_marginTop="@dimen/dp6"
                android:ellipsize="end"
                android:lineSpacingExtra="@dimen/dp2"
                android:maxLines="2"
                android:text="XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX"
                android:textColor="@color/light_gray"
                android:textSize="@dimen/text_size_13"
                android:visibility="gone" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/dp2"
                android:layout_marginTop="@dimen/dp5">

                <TextView
                    android:id="@+id/item_home_page_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="2018-5-25 11:03"
                    android:textColor="@color/light_gray"
                    android:textSize="@dimen/text_size_12" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/item_home_page_fabulous_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="14dp"
                        android:drawableLeft="@drawable/fabulous"
                        android:drawablePadding="@dimen/dp5"
                        android:gravity="center"
                        android:text="110"
                        android:textColor="@color/light_gray"
                        android:textSize="@dimen/text_size_12" />

                    <TextView
                        android:id="@+id/item_home_page_see_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/browse"
                        android:drawablePadding="@dimen/dp5"
                        android:gravity="center"
                        android:text="23"
                        android:textColor="@color/light_gray"
                        android:textSize="@dimen/text_size_12" />
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>