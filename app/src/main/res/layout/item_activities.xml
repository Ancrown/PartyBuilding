<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_activities_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">

    <RelativeLayout

        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp10"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginRight="@dimen/dp10"
        android:layout_marginTop="@dimen/dp10"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="@dimen/dp100"
            android:layout_height="@dimen/dp75"
            android:layout_gravity="center_vertical"
            android:visibility="gone">

            <ImageView
                android:id="@+id/item_activities_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp3"
                android:scaleType="centerCrop"
                android:src="@drawable/photo7" />

            <TextView
                android:id="@+id/item_activities_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp3"
                android:background="@drawable/label_yes"
                android:paddingBottom="@dimen/dp4"
                android:paddingLeft="@dimen/dp3"
                android:paddingRight="@dimen/dp3"
                android:paddingTop="@dimen/dp3"
                android:text="进行中"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_10" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp75"

            android:layout_gravity="center_vertical"
            android:layout_marginBottom="@dimen/dp3"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginTop="@dimen/dp5"
            android:layout_toRightOf="@+id/relativeLayout">


            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/item_activities_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"

                    android:layout_toLeftOf="@+id/item_activities_istop"
                    android:ellipsize="end"

                    android:maxLines="1"
                    android:text="我我我我我我无无呜呜呜呜问我我我无无呜呜呜呜问问"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_15" />

                <TextView

                    android:id="@+id/item_activities_istop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp5"
                    android:background="@drawable/fill_bg_red_4"
                    android:paddingBottom="@dimen/dp2"
                    android:paddingLeft="@dimen/dp4"
                    android:paddingRight="@dimen/dp4"
                    android:paddingTop="@dimen/dp2"
                    android:text="推荐"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_10"
                    android:visibility="gone" />

            </RelativeLayout>

            <TextView
                android:id="@+id/item_activities_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/item_activities_time"
                android:layout_marginBottom="@dimen/dp5"
                android:drawableLeft="@drawable/address"
                android:drawablePadding="@dimen/dp5"

                android:ellipsize="end"
                android:maxLines="1"
                android:text="地址：辽宁省沈阳市和平区文化路"
                android:textColor="@color/light_gray"
                android:textSize="@dimen/text_size_13" />


            <TextView
                android:id="@+id/item_activities_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:drawableLeft="@drawable/clock"
                android:drawablePadding="@dimen/dp5"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="2018-6-5 15:10"
                android:textSize="@dimen/text_size_13" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>