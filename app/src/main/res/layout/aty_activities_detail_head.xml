<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/head_new" />

    <View
        android:id="@+id/zhanwei"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <zhuri.com.partybuilding.view.ScrollViewExt
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/activities_detail_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginRight="@dimen/dp10"
                android:layout_marginTop="@dimen/dp10"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_20" />

            <TextView
                android:id="@+id/activities_detail_sendtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginRight="@dimen/dp10"
                android:layout_marginTop="@dimen/dp10"
                android:text=""
                android:textColor="@color/light_gray"
                android:textSize="@dimen/text_size_13" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:layout_marginTop="@dimen/dp10"
                android:background="@color/background" />

            <zhuri.com.partybuilding.view.NoScrollWebView
                android:id="@+id/activities_detail_webview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginRight="@dimen/dp10"
                android:layout_marginTop="@dimen/dp10"
                android:scrollbars="none"></zhuri.com.partybuilding.view.NoScrollWebView>

            <TextView
                android:id="@+id/activities_detail_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginRight="@dimen/dp10"
                android:layout_marginTop="@dimen/dp10"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_13" />

            <TextView
                android:id="@+id/activities_detail_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginRight="@dimen/dp10"
                android:layout_marginTop="@dimen/dp10"
                android:drawablePadding="@dimen/dp5"
                android:drawableRight="@drawable/address"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_13" />

            <TextView
                android:id="@+id/activities_detail_signendtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginRight="@dimen/dp10"
                android:layout_marginTop="@dimen/dp10"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_13" />

            <TextView
                android:id="@+id/activities_detail_peoplenum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginRight="@dimen/dp10"
                android:layout_marginTop="@dimen/dp10"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_13" />

            <TextView
                android:id="@+id/activities_detail_signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginRight="@dimen/dp10"
                android:layout_marginTop="@dimen/dp20"
                android:background="@drawable/fill_bg_red"
                android:gravity="center"
                android:paddingBottom="@dimen/dp5"
                android:paddingLeft="@dimen/dp7"
                android:paddingRight="@dimen/dp7"
                android:paddingTop="@dimen/dp5"
                android:text="我要报名"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_16" />

            <!--<TextView-->
            <!---->
            <!--android:layout_width="match_parent"-->

            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="center"-->
            <!--android:layout_marginTop="@dimen/dp20"-->
            <!--android:background="@drawable/fill_bg_red"-->
            <!--android:paddingBottom="@dimen/dp5"-->
            <!--android:paddingLeft="@dimen/dp7"-->
            <!--android:paddingRight="@dimen/dp7"-->
            <!--android:paddingTop="@dimen/dp5"-->
            <!--android:text="我要报名"-->
            <!--android:textColor="@color/white"-->
            <!--android:textSize="@dimen/text_size_16" />-->

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp10"
                android:layout_marginTop="@dimen/dp20"
                android:background="@color/background" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp30">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp10"
                    android:drawableLeft="@drawable/red_arrow"
                    android:drawablePadding="@dimen/dp5"
                    android:text="推荐活动"
                    android:textColor="@color/red"
                    android:textSize="@dimen/text_size_14" />

                <TextView
                    android:id="@+id/activities_detail_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp10"
                    android:text="更多"
                    android:textColor="@color/red"
                    android:textSize="@dimen/text_size_14" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:background="@color/background" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background">

            </android.support.v7.widget.RecyclerView>

        </LinearLayout>
    </zhuri.com.partybuilding.view.ScrollViewExt>
</LinearLayout>