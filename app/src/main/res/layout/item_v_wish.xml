<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_v_wish_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal">

        <View
            android:id="@+id/item_v_wish_view"
            android:layout_width="@dimen/dp3.5"
            android:layout_height="match_parent"
            android:background="@color/orange" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp10"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginRight="@dimen/dp10"
            android:layout_marginTop="@dimen/dp10"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_v_wish_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:ellipsize="end"
                    android:maxEms="15"
                    android:maxLines="1"
                    android:text="多久爱手机掉手机安静如确认确认多久爱手机掉手机安静如确认确认"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_15" />

                <TextView
                    android:id="@+id/item_v_wish_istop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp5"
                    android:layout_toRightOf="@+id/item_v_wish_title"
                    android:background="@drawable/fill_bg_red"
                    android:paddingBottom="@dimen/dp1"
                    android:paddingLeft="@dimen/dp3"
                    android:paddingRight="@dimen/dp3"
                    android:paddingTop="@dimen/dp1"
                    android:text="最新"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_10"
                    android:visibility="visible" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/item_v_wish_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"

                    android:layout_marginTop="@dimen/dp6"
                    android:layout_toLeftOf="@+id/item_v_wish_button"
                    android:ellipsize="end"
                    android:lineSpacingExtra="@dimen/dp2"
                    android:maxLines="2"
                    android:text="阿刚狼阿里那个李康康狼了那看来东莞哪里看你的公开栏阿刚狼阿里那个李康康狼了那看来东莞哪里看你的公开栏阿刚狼阿里那个李康康狼了那看来东莞哪里看你的公开栏阿刚狼阿里那个李康康狼了那看来东莞哪里看你的公开栏阿刚狼阿里那个李康康狼了那看来东莞哪里看你的公开栏阿刚狼阿里那个李康康狼了那看来东莞哪里看你的公开栏"
                    android:textColor="@color/light_gray"
                    android:textSize="@dimen/text_size_13" />

                <Button
                    android:id="@+id/item_v_wish_button"
                    android:layout_width="@dimen/dp48"
                    android:layout_height="@dimen/dp23"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp25"
                    android:background="@color/orange"
                    android:gravity="center"
                    android:text="认领"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_13" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp10"
                android:layout_marginTop="@dimen/dp5">

                <TextView
                    android:id="@+id/item_v_wish_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发布时间：2018-6-6 14:01"
                    android:textColor="@color/red"
                    android:textSize="@dimen/text_size_12" />

                <TextView
                    android:id="@+id/item_v_wish_integral"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="90积分"
                    android:textColor="@color/red"
                    android:textSize="@dimen/text_size_12" />
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>