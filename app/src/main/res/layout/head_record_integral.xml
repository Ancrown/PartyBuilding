<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp228"
        android:background="@color/white">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp110"
            android:background="@drawable/my_background" />

        <TextView
            android:id="@+id/record_integral_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp10"
            android:text="刘明生"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_18" />
        <TextView
            android:layout_below="@+id/record_integral_name"
            android:id="@+id/record_integral_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp10"
            android:text="南湖街道党支部"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_15" />

        <ImageView

            android:id="@+id/record_integral_img"
            android:layout_width="@dimen/dp70"
            android:layout_height="@dimen/dp70"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp70"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:src="@color/background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingBottom="@dimen/dp22"
            android:paddingTop="@dimen/dp22">

            <TextView
                android:id="@+id/record_integral_integral"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/dp5"
                android:text="22\n本月积分"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_15" />

            <TextView
                android:id="@+id/record_integral_ranking"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/dp5"
                android:text="No.22\n排名"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_15" />
        </LinearLayout>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/background" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="43dp">

        <TextView
            android:id="@+id/record_integral_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawablePadding="@dimen/dp5"
            android:drawableRight="@drawable/dao_san_jiao"
            android:text="2018-16"
            android:textColor="@color/red"
            android:textSize="@dimen/text_size_15" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/background" />
</LinearLayout>