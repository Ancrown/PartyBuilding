<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/item_record_integral_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp10">

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp40"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_record_integral_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/fill_bg_red_4"
                android:paddingBottom="@dimen/dp2"
                android:paddingLeft="@dimen/dp4"
                android:paddingRight="@dimen/dp4"
                android:paddingTop="@dimen/dp2"
                android:text="活动"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_10" />

            <TextView
                android:id="@+id/item_record_integral_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp5"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX"
                android:textSize="@dimen/text_size_15" />

        </LinearLayout>

        <TextView
            android:id="@+id/item_record_integral_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll"
            android:layout_marginTop="@dimen/dp10"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="2018-6-5 15:10"
            android:textSize="@dimen/text_size_13" />

        <TextView
            android:id="@+id/item_record_integral_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="+15"
            android:textColor="@color/orange"
            android:textSize="@dimen/text_size_15" />
    </RelativeLayout>
</LinearLayout>