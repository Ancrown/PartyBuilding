<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include
        android:id="@+id/inc"
        layout="@layout/head_new" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inc"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginRight="@dimen/dp10"
        android:orientation="vertical">

        <TextView
            android:id="@+id/answer_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp20"
            android:text="考试XXXXXXXXXXXXXXXXXXXXXX规则"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_20" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp20"
            android:background="@drawable/fill_bg_background_3"
            android:orientation="vertical"
            android:padding="@dimen/dp10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/answer_score"
                    style="@style/text_black"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="考试总分：100分" />

                <TextView
                    android:id="@+id/answer_num"
                    style="@style/text_black"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="总题数量：100" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp10">

                <TextView
                    android:id="@+id/answer_time_long"
                    style="@style/text_black"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="考试时长：100" />

            </LinearLayout>

            <TextView
                android:id="@+id/answer_time"
                style="@style/text_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp10"

                android:text="考试时间：2018-6-1至2018-10-1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp20"
            android:orientation="horizontal">

            <TextView
                style="@style/text_light_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="考试说明" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp10"
                android:background="@color/light_gray" />
        </LinearLayout>

        <TextView
            android:id="@+id/answer_content"
            style="@style/text_light_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp20"
            android:text="爱福家奥克兰师傅那看来斯诺伐克两三年国内其他不能去淘宝请务必提前加快玩吧其他看不起我就看他表情就看我不推荐可千万别统计考勤表 七八年探亲假口味不同年级开启" />


    </LinearLayout>

    <Button
        android:id="@+id/answer_start"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginRight="@dimen/dp10"
        android:background="@drawable/fill_bg_yellow"
        android:text="开始答题"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_15" />
</RelativeLayout>