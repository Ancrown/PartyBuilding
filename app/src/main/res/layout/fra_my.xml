<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <include layout="@layout/head_new" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp150"
        android:background="@drawable/my_background"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp105"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/my_img"
                android:layout_width="@dimen/dp44"
                android:layout_height="@dimen/dp44"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp32"
                android:src="@drawable/no_login" />

            <TextView
                android:id="@+id/my_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp26"
                android:text="点击登陆"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_20"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/my_rl_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp26"
                android:orientation="vertical"
            >

                <RelativeLayout
                    android:id="@+id/rl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/my_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="小李"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_17" />

                    <View
                        android:id="@+id/my_xian"
                        android:layout_width="@dimen/dp1"
                        android:layout_height="match_parent"
                        android:layout_alignBottom="@+id/my_name"
                        android:layout_alignTop="@+id/my_name"
                        android:layout_marginLeft="@dimen/dp8"
                        android:layout_marginRight="@dimen/dp8"
                        android:layout_toRightOf="@+id/my_name"
                        android:background="@color/white" />

                    <TextView
                        android:id="@+id/my_position"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/my_xian"
                        android:text="党书记"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_15" />

                    <TextView
                        android:id="@+id/my_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp6"
                        android:layout_toRightOf="@+id/my_position"
                        android:background="@drawable/fillet_background_bule"
                        android:paddingBottom="@dimen/dp1"
                        android:paddingLeft="@dimen/dp3"
                        android:paddingRight="@dimen/dp3"
                        android:paddingTop="@dimen/dp1"
                        android:text="优秀党员"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_11" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/my_accumulative"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl"
                    android:layout_marginTop="@dimen/dp6"
                    android:text="已加入党125天    累计学习23次"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_13" />

                <ImageView
                    android:id="@+id/my_dayuhao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp23"
                    android:src="@drawable/dayuhao" />
            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp2"
            android:background="#f9b174" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/my_integral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp38"
                android:drawableLeft="@drawable/integral"
                android:drawablePadding="@dimen/dp7"
                android:gravity="center"
                android:text="当前积分:0分"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_14" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp103">

        <RelativeLayout
            android:layout_width="@dimen/dp0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white">

            <TextView
                android:id="@+id/my_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawablePadding="@dimen/dp15"
                android:drawableTop="@drawable/info"
                android:text="个人信息"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="@dimen/dp0"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp5"
            android:layout_marginRight="@dimen/dp5"
            android:layout_weight="1"
            android:background="@color/white">

            <TextView
                android:id="@+id/my_activity_record"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawablePadding="@dimen/dp15"
                android:drawableTop="@drawable/activity_record"
                android:text="活动记录"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="@dimen/dp0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white">

            <TextView
                android:id="@+id/my_contribution"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawablePadding="@dimen/dp15"
                android:drawableTop="@drawable/contribution"
                android:text="积分记录"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp103"
        android:layout_marginTop="@dimen/dp5">

        <RelativeLayout
            android:layout_width="@dimen/dp0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white">

            <TextView
                android:id="@+id/my_learning_records"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawablePadding="@dimen/dp15"
                android:drawableTop="@drawable/learning_records"
                android:text="学习记录"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="@dimen/dp0"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp5"
            android:layout_marginRight="@dimen/dp5"
            android:layout_weight="1"
            android:background="@color/white">

            <TextView
                android:id="@+id/my_examination_records"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawablePadding="@dimen/dp15"
                android:drawableTop="@drawable/examination_records"
                android:text="考试记录"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="@dimen/dp0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white">

            <TextView
                android:id="@+id/my_examination_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawablePadding="@dimen/dp15"
                android:drawableTop="@drawable/examination_error"
                android:text="错题集"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp5"
        android:background="@color/white"></LinearLayout>
</LinearLayout>