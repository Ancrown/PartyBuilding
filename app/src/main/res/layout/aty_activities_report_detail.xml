<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/head_new" />

    <zhuri.com.partybuilding.view.ScrollViewExt
        android:id="@+id/activities_report_scrollviewext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            >

            <TextView
                android:id="@+id/activities_report_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp10"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginRight="@dimen/dp10"
                android:layout_marginTop="@dimen/dp10"
                android:text="台媒：美军B5211天内第3次进入南海空域"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_20" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginRight="@dimen/dp10">

                <TextView
                    android:id="@+id/activities_report_time_in"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/linearLayout2"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:text="发布时间：2018-6-1 10:11 "
                    android:textColor="@color/gray"
                    android:textSize="@dimen/text_size_13" />

                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/activities_report_fabulous"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:drawableLeft="@drawable/fabulous"
                        android:drawablePadding="@dimen/dp5"
                        android:text="125"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/text_size_12" />

                    <TextView
                        android:id="@+id/activities_report_browse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp12"
                        android:layout_marginRight="@dimen/dp12"
                        android:drawableLeft="@drawable/browse"
                        android:drawablePadding="@dimen/dp5"
                        android:text="125"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/text_size_12" />


                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:layout_marginTop="@dimen/dp10"
                android:background="@color/light_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginRight="@dimen/dp10"
                android:layout_marginTop="@dimen/dp10"
                android:background="@color/background"
                android:orientation="vertical"
                android:padding="@dimen/dp10">

                <TextView
                    android:id="@+id/activities_report_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="地址：沈阳市和平区"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/text_size_13" />

                <TextView
                    android:id="@+id/activities_report_acttime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    android:text="活动时间：2018-6-20 -- 2018-9-1"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/text_size_13" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/activities_report_people_num"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="报名人数：20人"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/text_size_13" />

                    <TextView
                        android:id="@+id/activities_report_host"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="举办者：沈阳市和平区"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/text_size_13" />
                </LinearLayout>


            </LinearLayout>

            <WebView
                android:id="@+id/activities_report_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginRight="@dimen/dp10"
                android:layout_marginTop="10dp"
                android:scrollbars="none">

            </WebView>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp5"
                android:layout_marginTop="@dimen/dp10"
                android:background="@color/background" />

            <TextView
                android:id="@+id/activities_report_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginRight="@dimen/dp10"
                android:layout_marginTop="@dimen/dp15"
                android:text="上一篇：XXXXXXXXX"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/activities_report_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp15"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginRight="@dimen/dp10"
                android:layout_marginTop="@dimen/dp15"
                android:text="下一篇：XXXXXXXXX"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14" />

        </LinearLayout>
    </zhuri.com.partybuilding.view.ScrollViewExt>

</LinearLayout>